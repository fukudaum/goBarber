{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "rootDir": "",
      "baseUrl": "./src",
      "paths": {
        "@modules/*": ["modules/*"],
        "@config/*": ["config/*"],
        "@shared/*": ["shared/*"]
      },
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "experimentalDecorators": true,
      "skipLibCheck": true
    }
}



